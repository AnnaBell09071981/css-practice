{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}
<header class="header">
    <a href="#test">
        {{> logo }}
    </a>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>

<main class="main">
    {{#with info}}
    <div class="info">
        <h1 class="info_title">{{title}}</h1>
        <p class="info_description">{{description}}</p>
    </div>
    {{/with}}

    {{#with form}}
    <form class="form">
        <div class="form_input_list">
            {{#each inputs}}
            <input type="{{type}}" placeholder="{{placeholder }}" class="form_input" name="{{name}}"
                id="form-input-{{id}}">
            {{/each}}
        </div>

        <div class="form_checkbox">
            <input type="checkbox" name="{{checkbox.name}}" id="{{checkbox.name}}">
            <div></div>
            <label for="{{checkbox.name}}">{{checkbox.label}}</label>
        </div>
        <button type="submit" class="form_button">{{button}}</button>
        <div class="line_button"></div>
        <p class="form_info">{{info}}</p>
    </form>
    {{/with}}
</main>

{{#with updates}}
<div class="updates">
    <h2 class="updates_title">{{title}}</h2>
</div>
{{#each list}}
<div class="list">
    <img src="/img/test2.png" alt="photo list" class="photo_list">
    <div class="coments_list">
        <h3 class="nickname_list">{{nickname}}</h3>
        <p class="description_list">{{description}}</p>
    </div>
</div>
{{/each}}
{{#with show_all}}
<a href="{{url}}" class="show_all">{{text}}</a>
{{/with}}
{{/with}}

{{#with expirience}}
<div class="card_expirience">
    <badge class="badge_expirience">{{badge}}</badge>
    <div class="expirience">

        <h2 class="title_expirience">{{title}}</h2>

        <div class="card_list_expirience">
            {{#each list}}
            <div class="list_expirience">
                <h3 class="name_list">{{name}}</h3>
                <p class="details_list">{{details}}</p>
            </div>
            {{/each}}
        </div>
    </div>
</div>
{{/with}}
<footer class="footer ">
    <div>
        {{> logo }}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div class="col-3">
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>



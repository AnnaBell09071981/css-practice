{{!--
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
--}}
<header class="header">
    <a href="#test">
        {{> logo }}
    </a>

    <nav class="header_nav">
        <div class="header_nav_right">
            {{> nav list=header}}
        </div>
    </nav>
</header>
{{#with main}}
<div class="main">
    <div class="main_contet">
        <img src="{{image}}" alt="Main image" class="main_image">
        <h1 class="main_title">{{heading}}</h1>
        <p class="description_text">{{description}}</p>
        <a href="{{href}}" class="button">{{button}}</a>
    </div>
</div>
{{/with}}
<main class="featured">Featured</main>
<div class="actions">Actions</div>




<footer class="footer ">
    <div>
        {{> logo }}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div class="col-3">
        <span class="footer_title">{{title}}</span>
        {{> nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>


